#!/usr/bin/env bash

###############################################
# Installing smalt
#
# by Heather Kelly, 2015
#

NAME=${NAME:-smalt}
VERSION=${VERSION:-0.7.6}
INSTALL_PREFIX=${INSTALL_PREFIX:-/shared/ucl/apps/$NAME/$VERSION/$COMPILER_TAG}
MD5=${MD5:-57ed011836fda8fb5e34604dd1858b5e}
SRC_ARCHIVE=${SRC_ARCHIVE:-http://sourceforge.net/projects/${NAME}/files/${NAME}-${VERSION}-static.tar.gz}
BAMBAMC_INSTALL_DIR=${BAMBAMC_INSTALL_DIR:-/shared/ucl/apps/bambamc/0.0.50/gnu-4.9.2}

set -e

temp_dir=`mktemp -d -p /dev/shm`

pushd $temp_dir

wget $SRC_ARCHIVE
archive=$(basename "${SRC_ARCHIVE}")

CHECKSUM=`md5sum $archive| awk '{print $1}'`

if [ "$MD5" == "$CHECKSUM" ]
then
  tar -zxvf $archive

  cd ${NAME}-${VERSION}
  sh ./configure --prefix=$INSTALL_PREFIX --with-bambamc=yes BAMBAMC_CFLAGS="-I$BAMBAMC_INSTALL_DIR/include" BAMBAMC_LIBS="-L$BAMBAMC_INSTALL_DIR/lib -lbambamc"

  make
  make install

else
  echo "Hash mismatch."
  echo "Expected: $MD5"
  echo "Got: $CHECKSUM"
fi

popd

rm -rf $temp_dir

