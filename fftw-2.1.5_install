#!/usr/bin/env bash

###############################################
# Installing FFTW2
#
# by Owain Kenway, 2015 
#

COMPILER_TAG=${COMPILER_TAG:-gnu-4.9.2}
VERSION=${VERSION:-2.1.5}
INSTALL_PREFIX=${INSTALL_PREFIX:-/shared/ucl/apps/fftw/$VERSION/$COMPILER_TAG}
MD5=${MD5:-8d16a84f3ca02a785ef9eb36249ba433}
SRC_ARCHIVE=${SRC_ARCHIVE:-http://www.fftw.org/fftw-${VERSION}.tar.gz}

set -e

export PATH=$INSTALL_PREFIX/bin:$PATH

temp_dir=`mktemp -d`

cd $temp_dir

wget $SRC_ARCHIVE

CHECKSUM=`md5sum fftw-${VERSION}.tar.gz| awk '{print $1}'`

if [ "$MD5" == "$CHECKSUM" ]
then
# Single precision
  mkdir single
  cd single
  tar -zxvf ../fftw-${VERSION}.tar.gz

  cd fftw-${VERSION}
  sh ./configure --prefix=$INSTALL_PREFIX --enable-float --enable-type-prefix
  make && make install

  cd ../..

# Double precision
  mkdir double
  cd double
  tar -zxvf ../fftw-${VERSION}.tar.gz

  cd fftw-${VERSION}
  sh ./configure --prefix=$INSTALL_PREFIX --enable-type-prefix
  make && make install

  cd ../..

# Single precision
  mkdir single-shared
  cd single-shared
  tar -zxvf ../fftw-${VERSION}.tar.gz

  cd fftw-${VERSION}
  sh ./configure --prefix=$INSTALL_PREFIX --enable-float --enable-type-prefix --enable-shared
  make && make install

  cd ../..

# Double precision
  mkdir double-shared
  cd double-shared
  tar -zxvf ../fftw-${VERSION}.tar.gz

  cd fftw-${VERSION}
  sh ./configure --prefix=$INSTALL_PREFIX --enable-type-prefix --enable-shared
  make && make install

else
  echo "Hash mismatch."
  echo "Expected: $MD5"
  echo "Got: $CHECKSUM"
fi
